{

	"prompts": {
		"name": {
			"description": "What is your name?",
			"message": "Name is required"
		},
		"age": {
			"description": "How old are you?",
			"pattern": "[0-9]+",
			"message": "Age must be a number."
		}
	},
	
	"modify": {
		"change-me.txt": [
			{
				"pattern": "-- APPEND ITEMS HERE --",
				"append": "\n{{name}}: {{age}}"
			}, {
				"pattern": "-- PREPEND ITEMS HERE --",
				"prepend": "this is prepended! ## replace name here ##: {{age}}\n"
			}, {
				"pattern": "## replace name here ##",
				"replace": "replaced => {{dashCase name}}"
			}
		]
	}
}